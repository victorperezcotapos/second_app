<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td class = "col-4"><%= student.name %></td>
        <td class = "col-4"><%= student.age %></td>
        <td class="btn btn-primary text-white"><%= link_to 'Show', student %></td>
        <td class="btn btn-warning text-white"><%= link_to 'Edit', edit_student_path(student) %></td>
        <td class="btn btn-danger text-white"><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

